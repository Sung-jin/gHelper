{
  "name": "ghelper",
  "version": "0.0.1",
  "description": "",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist-electron",
    "dev": "npm run clean && vite --force",
    "build": "vue-tsc && vite build && electron-builder",
    "build:fast": "vue-tsc && vite build && electron-builder --win --dir",
    "preview": "vite preview",

    "pip:install": "pip install -r engine/requirements.txt",
    "pip:install-tools": "pip install -r engine/tools/requirements.txt",
    "pip:install-all": "npm run pip:install && npm run pip:install-tools",
    "pip:update-req": "pipreqs ./engine --ignore engine/core,engine/plugins,engine/tests,engine/tools --force",
    "pip:update-core-req": "pipreqs ./engine/core --force",
    "pip:update-plugins-req": "pipreqs ./engine/plugins --force",
    "pip:update-tests-req": "pipreqs ./engine/tests --force",
    "pip:update-tools-req": "pipreqs ./engine/tools --force",
    "pip:update-all": "npm run pip:update-req && npm run pip:update-core-req && npm run pip:update-plugins-req && npm run pip:update-tests-req && npm run pip:update-tools-req"
  },
  "build": {
    "appId": "com.example.ghelper",
    "productName": "G-Helper",
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!src/**/*",
      "!engine/**/*",
      "!*.ts"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "G-Helper",
      "perMachine": true
    },
    "extraResources": [
      {
        "from": "engine",
        "to": "engine",
        "filter": [
          "core/**/*",
          "plugins/**/*",
          "venv/**/*",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      }
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.2.2"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "vue": "^3.5.26"
  }
}
