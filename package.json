{
  "name": "ghelper",
  "version": "0.0.1",
  "description": "",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --force",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.ghelper",
    "productName": "G-Helper",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true, // 사용자가 직접 경로를 선택하게 함
      "shortcutName": "G-Helper"
    },
    "extraResources": [
      {
        "from": "engine",
        "to": "engine",
        "filter": [
          "**/*",
          "!venv"
        ]
      }
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.2.2"
  },
  "dependencies": {
    "vue": "^3.5.26"
  }
}
